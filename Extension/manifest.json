{
  "manifest_version": 3,
  "name": "PhishVault Floating Panel",
  "version": "1.0",
  "description": "Scan URLs for phishing threats using AI",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_title": "PhishVault"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:8000 http://127.0.0.1:8000;"
  }
}
